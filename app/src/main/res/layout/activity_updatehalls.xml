<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".updatehalls"
    android:background="#F3EEC7"
    android:textAlignment="center">

  <TextView
      android:id="@+id/updatehe"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="cursive"
      android:text="@string/updh"
      android:textAlignment="center"
      android:textColor="@color/txc"
      android:textSize="24sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.474"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.049" />

  <TextView
      android:id="@+id/updht"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="cursive"
      android:text="@string/halltype"
      android:textAlignment="center"
      android:textColor="@color/txc"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.446"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.158" />

  <Spinner
      android:id="@+id/spinnerhty"
      android:layout_width="214dp"
      android:layout_height="41dp"
      android:background="@color/back"
      android:textAlignment="center"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.411"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.201" />

  <TextView
      android:id="@+id/upddate"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="cursive"
      android:text="@string/date"
      android:textColor="@color/txc"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.435"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.293" />

  <EditText
      android:id="@+id/updtedate"
      android:layout_width="226dp"
      android:layout_height="40dp"
      android:background="@color/back"
      android:ems="10"
      android:fontFamily="cursive"
      android:inputType="textPersonName"
      android:text="@string/ddate"
      android:textAlignment="center"
      android:textColor="@android:color/darker_gray"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.405"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.338" />

  <TextView
      android:id="@+id/updtime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="cursive"
      android:text="@string/time"
      android:textAlignment="center"
      android:textColor="@color/txc"
      android:textSize="24sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.43"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.436" />

  <EditText
      android:id="@+id/utimet"
      android:layout_width="226dp"
      android:layout_height="40dp"
      android:background="@color/back"
      android:ems="10"
      android:fontFamily="cursive"
      android:hint="8.00AM -  3.30PM"
      android:inputType="textPersonName"
      android:textAlignment="center"
      android:textColor="@android:color/darker_gray"
      android:textSize="18sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.418"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.486" />

  <TextView
      android:id="@+id/updpinfo"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="cursive"
      android:text="@string/persinfor"
      android:textAlignment="center"
      android:textColor="@color/txc"
      android:textSize="22sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.448"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.568" />

  <EditText
      android:id="@+id/updname"
      android:layout_width="226dp"
      android:layout_height="40dp"
      android:background="@color/back"
      android:ems="10"
      android:fontFamily="cursive"
      android:inputType="textPersonName"
      android:text="@string/fulln"
      android:textAlignment="center"
      android:textColor="@android:color/darker_gray"
      android:textSize="18sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.421"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.651" />

  <EditText
      android:id="@+id/upemail"
      android:layout_width="226dp"
      android:layout_height="40dp"
      android:background="@color/back"
      android:ems="10"
      android:fontFamily="cursive"
      android:inputType="textPersonName"
      android:text="@string/email"
      android:textAlignment="center"
      android:textColor="@android:color/darker_gray"
      android:textSize="18sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.421"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.736" />

  <EditText
      android:id="@+id/updphone"
      android:layout_width="226dp"
      android:layout_height="40dp"
      android:background="@color/back"
      android:ems="10"
      android:fontFamily="cursive"
      android:inputType="textPersonName"
      android:text="@string/phone"
      android:textAlignment="center"
      android:textColor="@android:color/darker_gray"
      android:textSize="18sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.421"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.819" />

  <Button
      android:id="@+id/updabutton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@android:color/holo_orange_light"
      android:fontFamily="serif"
      android:text="@string/upb"
      android:textColor="@color/lbtc"
      android:textSize="18sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.461"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.929" />

  </androidx.constraintlayout.widget.ConstraintLayout>